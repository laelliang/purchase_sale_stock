{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": false,
    "outDir": "dist",
    "rootDir": "./",
    "allowJs": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": ["./*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}